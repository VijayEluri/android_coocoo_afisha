<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="layout_main">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <!-- buttons -->
    <style name="button_defaults">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="search_button" parent="@style/button_defaults">
      <item name="android:background">@color/dasboard_bar_bg_color</item>
      <item name="android:gravity">right</item>
      <item name="android:src">@drawable/dashboard_bar_search_button</item>
    </style>
    <!-- dasboard bar -->
    <style name="dasboard_bar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/dasboard_bar_bg_color</item>
    </style>
    <style name="dasboard_bar_logo">
        <item name="android:background">@color/dasboard_bar_bg_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:src">@drawable/dashboard_bar_logo</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5dip</item>
    </style>
    <style name="dasboard_bar_spring">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- title bar -->
    <style name="title_bar_box">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:background">@color/title_bar_bg_color</item>
    </style>
    <style name="title_bar_shadow">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">2dip</item>
      <item name="android:background">@drawable/title_bar_shadow_bg</item>
    </style>
    <style name="title_bar">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:textColor">@color/title_bar_text_color</item>
      <item name="android:textStyle">bold</item>
      <item name="android:paddingLeft">5dip</item>
      <item name="android:paddingTop">3dip</item>
      <item name="android:paddingBottom">5dip</item>
      <item name="android:paddingRight">3dip</item>
    </style>
    <!-- dashboard -->
    <style name="dashboard_layouts_main">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="dashboard_layouts_horizontal">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="dashboard_button_container">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/dashboard_button_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:selectable">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="dashboard_image_container">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="dashboard_item_image">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="dashboard_item_label">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dashboard_item_label</item>
        <item name="android:gravity">top|center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">5.0dip</item>
        <item name="android:layout_weight">1.5</item>
    </style>
    <style name="dasboard_horizontal_hr">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">2dip</item>
      <item name="android:background">@drawable/dashboard_hborder_bg</item>
    </style>
    <style name="dasboard_vertical_hr">
      <item name="android:layout_width">2dip</item>
      <item name="android:layout_height">fill_parent</item>
      <item name="android:background">@drawable/dashboard_vborder_bg</item>
    </style>
    <!-- list of resourses -->
    <style name="list_main_view">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">fill_parent</item>
      <item name="android:divider">@color/list_main_devider</item>
      <item name="android:dividerHeight">1dip</item>
      <item name="android:cacheColorHint">@color/list_main_box_normal</item>
    </style>
    <style name="list_main_no_data">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">fill_parent</item>
      <item name="android:gravity">center</item>
      <item name="android:textSize">14dip</item>
      <item name="android:padding">20dip</item>
      <item name="android:text">@string/no_data_maybe_update</item>
      <item name="android:visibility">gone</item>
    </style>
    <!-- list of resourses (row) -->
    <style name="list_row_box">
      <item name="android:orientation">horizontal</item>
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">fill_parent</item>
      <item name="android:paddingLeft">5dip</item>
      <item name="android:paddingRight">5dip</item>
      <item name="android:paddingTop">2dip</item>
      <item name="android:background">@drawable/list_bg</item>
    </style>
    <style name="list_row_text_box">
      <item name="android:orientation">vertical</item>
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">fill_parent</item>
      <item name="android:padding">2dip</item>
      <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="list_row_text_main">
      <item name="android:orientation">vertical</item>
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:typeface">sans</item>
      <item name="android:textSize">14dip</item>
      <item name="android:textColor">@color/list_main_text</item>
    </style>
    <style name="list_row_text_small">
      <item name="android:orientation">vertical</item>
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:typeface">sans</item>
      <item name="android:textSize">12dip</item>
      <item name="android:textColor">@color/list_small_text</item>
    </style>
    <style name="list_row_img">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">fill_parent</item>
      <item name="android:paddingRight">6dip</item>
      <item name="android:src">@drawable/listview_arrow</item>
      <item name="android:layout_alignParentRight">true</item>
      <item name="android:layout_centerVertical">true</item>
    </style>
    <!-- two_buttons_bar -->
    <style name="two_buttons_bar">
      <item name="android:orientation">horizontal</item>
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="two_buttons_bar_divider">
      <item name="android:layout_width">1dip</item>
      <item name="android:layout_height">fill_parent</item>
      <item name="android:background">@drawable/pixel_bg</item>
    </style>
    <!-- two_buttons_bar (button) -->
    <style name="two_buttons_box">
        <item name="android:orientation">horizontal</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:selectable">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/two_buttons_bar_button_bg</item>
    </style>
    <style name="two_buttons_button_image">
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/listview_arrow</item>
    </style>
    <style name="two_buttons_button_label">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dashboard_item_label</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10.0dip</item>
        <item name="android:layout_marginBottom">10.0dip</item>
    </style>
</resources>