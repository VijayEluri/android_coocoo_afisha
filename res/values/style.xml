<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- buttons -->
    <style name="button_defaults">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="search_button" parent="@style/button_defaults">
      <item name="android:background">@color/dasboard_bar_bg_color</item>
      <item name="android:gravity">right</item>
      <item name="android:src">@drawable/dashboard_bar_search_button</item>
    </style>
    <!-- dasboard bar -->
    <style name="dasboard_bar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/dasboard_bar_bg_color</item>
    </style>
    <style name="dasboard_bar_logo">
        <item name="android:background">@color/dasboard_bar_bg_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:src">@drawable/dashboard_bar_logo</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5dip</item>
    </style>
    <style name="dasboard_bar_spring">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- title bar -->
    <style name="title_bar_box">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:background">@color/title_bar_bg_color</item>
    </style>
    <style name="title_bar_shadow">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">2dip</item>
      <item name="android:background">@drawable/title_bar_shadow_bg</item>
    </style>
    <style name="title_bar">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:textColor">@color/title_bar_text_color</item>
      <item name="android:textStyle">bold</item>
      <item name="android:paddingLeft">5dip</item>
      <item name="android:paddingTop">3dip</item>
      <item name="android:paddingBottom">5dip</item>
      <item name="android:paddingRight">3dip</item>
    </style>
    <!-- dashboard -->
     <style name="dashboard_main">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="dashboard_layouts_main">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="dashboard_layouts_horizontal">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="dashboard_button_container">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/dashboard_button_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:selectable">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="dashboard_image_container">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="dashboard_item_image">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="dashboard_item_label">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff111111</item>
        <item name="android:gravity">top|center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">5.0dip</item>
        <item name="android:layout_weight">1.5</item>
    </style>
    <style name="dasboard_cinemas_button">
      <item name="android:layout_width">fill_parent</item>
      <item name="android:layout_height">fill_parent</item>
      <item name="android:layout_weight">1</item>
      <item name="android:background">@drawable/dashboard_button_bg</item>
    </style>
</resources>