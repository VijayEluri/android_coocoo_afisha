<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_height="fill_parent"
   android:layout_width="fill_parent"
   android:orientation="vertical">
   
   <include android:id="@+id/dashboard_top" layout="@layout/dashboard_top" />
   
   <LinearLayout
      android:orientation="vertical"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_gravity="center"
      android:gravity="center">
      <TextView
         android:text="@string/main_title"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_gravity="center"
         android:layout_marginBottom="15dip"
         android:textSize="24.5sp" />
      <TextView
         android:id="@+id/current_city"
         android:text="@string/current_city_title"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_gravity="center"
         android:layout_marginBottom="15dip"
         android:textSize="16sp" />
      <Button
         android:id="@+id/cinemas_button"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:drawableLeft="@drawable/cinemas_button"
         android:drawablePadding="3sp"
         android:text="@string/cinemas_label" />
       <Button
         android:id="@+id/theaters_button"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:drawableLeft="@drawable/theaters_button"
         android:drawablePadding="3sp"
         android:text="@string/theaters_label" />
      <Button
         android:id="@+id/theaters_map_button"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:drawableLeft="@drawable/map_button"
         android:drawablePadding="3sp"
         android:text="@string/theaters_map_label" />
      <Button
         android:id="@+id/update_button"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:drawableLeft="@drawable/update_button"
         android:drawablePadding="3sp"
         android:text="@string/update_label" />
   </LinearLayout>
</LinearLayout>
